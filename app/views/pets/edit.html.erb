<h1>Editing pet</h1>

<%= form_for(@pet) do |f| %>

  <% if @pet.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@pet.errors.count, "error") %> prohibited
        this pet from being saved:
      </h2>
      <ul>
        <% @pet.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :kind %><br>
    <%= f.text_field :kind %>
  </p>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :age %><br>
    <%= f.text_field :age %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :vaccinated %><br>
    <%= f.select :vaccinated, options_for_select([["Si", "si"], ["No", "no"], ["Se desconoce", "desconocido"]],selected: f.object.vaccinated) %>
  </p>

  <p>
    <%= f.label :sterilized %><br>
    <%= f.select :sterilized, options_for_select([["Si", "si"], ["No", "no"], ["Se desconoce", "desconocido"]], selected: f.object.sterilized) %>
  </p>

  <p>
    <%= f.label :location %><br>
    <%= f.select :location, options_for_select([["Aguascalientes", "ag"], ["Baja California", "bc"],["Baja California Sur", "bcs"],["Campeche", "cp"],["Coahuila","ch"],["Colima", "cl"],["Chiapas", "chp"],["Chihuahua", "chi"],["Distrito Federal", "df"],["Durango", "drg"],["Guanajuato","gto"],["Guerrero","gro"],["Hidalgo","hgo"],["Jalisco","jls"],["México", "mex"],["Michoacan", "mhc"],["Morelos","mls"],["Nayarit", "nyt"],["Nuevo León","nl"],["Oaxaca","oax"],["Puebla","pl"],["Querétaro","qt"],["Quintana Roo","qr"],["San Luis Potosí","sp"],["Sinaloa","sl"],["Sonora","sr"],["Tabasco","tc"],["Tamaulipas","ts"],["Tlaxcala","tl"],["Veracruz","vz"],["Yucatán","yn"],["Zacatecas","zs"]], selected: f.object.location) %>
  </p>
  <p>
    <%= f.submit %>
  </p>

<% end %>

<%= link_to 'Back', pets_path %>
