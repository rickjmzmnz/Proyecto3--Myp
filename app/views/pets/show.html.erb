<p>
  <strong>Kind:</strong>
  <%= @pet.kind %>
</p>

<p>
  <strong>Name:</strong>
  <%= @pet.name %>
</p>

<p>
  <strong>Age:</strong>
  <%= @pet.age %>
</p>

<p>
  <strong>Description:</strong>
  <%= @pet.description %>
</p>


<p>
  <strong>Vaccinated:</strong>
  <%= @pet.vaccinated %>
</p>

<p>
  <strong>Sterilized:</strong>
  <%= @pet.sterilized %>
</p>

<p>
  <strong>Location:</strong>
  <%= @pet.location %>
</p>

<%unless @pet.user.nil?%>
  <%if @pet.user.provider == 'twitter'%>
      publicado por Twitter.com/<%=@pet.user.nickname%>
  <% else %>
    publicado por <%=@pet.user.email%><br>
  <% end %>
<br>
<%end%>

<% unless @pet.user.nil?%>
  <% if @pet.user == current_user %>
    <div><%= link_to 'Edit', edit_pet_path(@pet) %></div>
    <br>
    <div><%= button_to "Eliminar", @pet, {:onclick => "return confirm('Are you sure?')", :method => :delete}%></div>
  <% end %>
  <br>
<% end %>

<%= link_to 'Regresa a la lista', pets_path %>
