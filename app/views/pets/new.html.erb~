<h1>New Animal</h1>
<%= form_for :pet, url: pets_path do |f| %>

  <% if @pet.errors.any? %>
  <div id="error_explanation">
    <h1>
      <%= pluralize(@pet.errors.count, "error") %> prohibited
      this pet from being saved:
    </h1>
    <ul>
      <% @pet.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <p>
    <%= f.label :kind %><br>
    <%= f.text_field :kind %>
  </p>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :age %><br>
    <%= f.text_field :age %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :vaccinated %><br>
    <%= f.select :vaccinated, options_for_select([["Si", "si"], ["No", "no"], ["Se desconoce", "desconocido"]]) %>
  </p>

  <p>
    <%= f.label :sterilized %><br>
    <%= f.select :sterilized, options_for_select([["Si", "si"], ["No", "no"], ["Se desconoce", "desconocido"]]) %>
  </p>

  <p>
    <%= f.label :location %><br>
    <%= f.select :location, options_for_select([["Aguascalientes", "ag"], ["Baja California", "bc"],["Baja California Sur", "bcs"],["Campeche", "cp"],["Coahuila","ch"],["Colima", "cl"],["Chiapas", "chp"],["Chihuahua", "chi"],["Distrito Federal", "df"],["Durango", "drg"],["Guanajuato","gto"],["Guerrero","gro"],["Hidalgo","hgo"],["Jalisco","jls"],["México", "mex"],["Michoacan", "mhc"],["Morelos","mls"],["Nayarit", "nyt"],["Monterrey","mty"],["Oaxaca","oax"],["Puebla","pl"],["Querétaro","qt"],["Quintana Roo","qr"],["San Luis Potosí","sp"],["Sinaloa","sl"],["Sonora","sr"],["Tabasco","tc"],["Tamaulipas","ts"],["Tlaxcala","tl"],["Veracruz","vz"],["Yucatán","yn"],["Zacatecas","zs"]]) %>
  </p>

  <p>
    <%= f.submit %>
  </p>
  <%= link_to 'Regresar', pets_path %>
<% end %>
